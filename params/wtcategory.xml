<?xml version="1.0" encoding="UTF-8"?>
<form>
	<fields name="fieldparams">
		<fieldset name="fieldparams">
			<field type="radio"
				   name="is_core_extension"
				   label="PLG_FIELDS_WTCATEGORY_IS_CORE_EXTENSION"
				   filter="boolean"
				   layout="joomla.form.field.radio.switcher"
				   default="1">
				<option value="0">JNO</option>
				<option value="1">JYES</option>
			</field>
			<field type="list"
				   name="component"
				   label="PLG_FIELDS_WTCATEGORY_COMPONENT"
				   showon="is_core_extension:1">
				<option value="com_content">PLG_FIELDS_WTCATEGORY_COMPONENT_COM_CONTENT</option>
				<option value="com_contact">PLG_FIELDS_WTCATEGORY_COMPONENT_COM_CONTACT</option>
				<option value="com_banners">PLG_FIELDS_WTCATEGORY_COMPONENT_COM_BANNERS</option>
				<option value="com_newsfeeds">PLG_FIELDS_WTCATEGORY_COMPONENT_COM_NEWSFEEDS</option>
			</field>
			<field
					name="customcomponent"
					type="text"
					label="PLG_FIELDS_WTCATEGORY_CUSTOMCOMPONENT_NAME"
					filter="integer"
					validate="options"
					showon="is_core_extension:0"
			/>
			<field
					name="multiple"
					type="list"
					label="PLG_FIELDS_USERGROUPLIST_PARAMS_MULTIPLE_LABEL"
					filter="integer"
					validate="options"
			>
				<option value="">COM_FIELDS_FIELD_USE_GLOBAL</option>
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>
			<field
					name="published"
					type="list"
					label="PLG_FIELDS_WTCATEGORY_PARAMS_PUBLISHED_LABEL"
					filter="boolean"
					validate="options"
					default="0"
			>
				<option value="">COM_FIELDS_FIELD_USE_GLOBAL</option>
				<option value="0">JNO</option>
				<option value="1">JYES</option>
			</field>
			<field
					name="published"
					type="list"
					label="PLG_FIELDS_WTCATEGORY_PARAMS_PUBLISHED_LABEL"
					filter="boolean"
					validate="options"
					default="0"
			>
				<option value="">COM_FIELDS_FIELD_USE_GLOBAL</option>
				<option value="0">JNO</option>
				<option value="1">JYES</option>
			</field>
			<field
					name="language"
					type="contentlanguage"
					label="JFIELD_LANGUAGE_LABEL"
			>
				<option value="*">JALL</option>
			</field>
		</fieldset>
	</fields>
</form>
